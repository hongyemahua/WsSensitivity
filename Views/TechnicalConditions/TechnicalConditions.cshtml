<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>技术条件</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/Static/layui/layui/css/layui.css" rel="stylesheet" />
</head>
@{ 
    string tc = (string)ViewData["tc"];
    int id = (int)ViewData["id"];
    string type = (string)ViewData["type"];
}
<body>

    <div class="layui-form" lay-filter="form-technicalconditions" id="form-technicalconditions" style="padding: 20px 10px 10px 10px;">

        @if (type.Equals("L"))
        {
            <div class="layui-form-item layui-form-text">
                <textarea name="let_TechnicalConditions" placeholder="请输入内容" class="layui-textarea">@tc</textarea>
            </div>
            <input value="@id" type="hidden" name="let_Id" />
        }
        @if (type.Equals("D"))
        {
            <div class="layui-form-item layui-form-text">
                <textarea name="det_TechnicalConditions" placeholder="请输入内容" class="layui-textarea">@tc</textarea>
            </div>
            <input value="@id" type="hidden" name="det_Id" />
        }
        <div class="layui-form-item layui-hide">
            <button class="layui-btn" lay-submit lay-filter="technicalconditions_submit" id="technicalconditions_submit">提交</button>
        </div>
    </div>

    <script src="~/Static/layui/layui/layui.js"></script>
    <script>
        layui.config({
            base: '../static/layui/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'form', 'role_validation'], function () {
            var $ = layui.$
                , form = layui.form;
        })
    </script>
</body>
</html>
